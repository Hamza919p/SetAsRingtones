        <ProgressBar
            android:id="@+id/rotate_loading"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:progressTint="@color/primary"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>