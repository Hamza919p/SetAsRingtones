<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme.TransNav" parent="Theme.SetAsRingtones">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

    </style>

    <style name="NavigationTextSize" parent="AppTheme.TransNav">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="fontFamily">@font/quicksand_semibold</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/quicksand_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="semi_bold_text_style" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quicksand_semibold</item>
    </style>

</resources>